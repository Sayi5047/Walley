<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:clipChildren="false"
    tools:context=".activity.HomeActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:elevation="0dp">

            <FrameLayout
                android:id="@+id/jelly_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:animateLayoutChanges="true"
                android:layout_marginTop="@dimen/margin_32"
                android:background="@color/bg"
                app:layout_scrollFlags="scroll|enterAlways">

                <View
                    android:id="@+id/jelly_view"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rounded_rect_blue" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/jelly_tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_48"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    app:tabIndicatorHeight="0dp"
                    app:tabMode="fixed"
                    app:tabRippleColor="@null"
                    app:tabSelectedTextColor="@color/tab_selected_color"
                    app:tabTextAppearance="@style/TabTextAppearance" />


            </FrameLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/footer_rl"
            android:animateLayoutChanges="true"
            android:layout_marginBottom="@dimen/margin_32"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:background="@drawable/home_screen_half_rounded_bg" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!--FOOTER-->
    <RelativeLayout
        android:id="@+id/footer_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">


        <LinearLayout
            android:id="@+id/bottom_app_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#212121"
            android:layout_alignParentBottom="true">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/menu_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/lottie_side_menu"
                android:tint="@android:color/white" />


            <TextView
                android:id="@+id/app_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:gravity="center"
                android:src="@drawable/ic_menu_black_24dp"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_18"
                android:tint="@android:color/white" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/search_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:lottie_rawRes="@raw/lottie_search_icon"
                app:lottie_loop="false"
                android:tint="@android:color/white" />

        </LinearLayout>
        <!--SEARCH LAYOUT-->
        <RelativeLayout
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_app_bar"
            android:background="@color/bg"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/image_search_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/search_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rect_white"
                    android:padding="@dimen/padding_20"
                    android:hint="@string/search_here"
                    android:textColor="#212121"
                    android:textColorHint="@color/text_color"
                    android:drawableRight="@drawable/ic_search_white_24dp"
                    android:layout_marginTop="@dimen/margin_48"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:imeOptions="actionSearch"
                    android:inputType="textAutoComplete"
                    android:drawableEnd="@drawable/ic_search_white_24dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/search_images_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/search_et"
                    android:layout_margin="@dimen/margin_4" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/search_message_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/message_icon"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/messageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Oops ... That's a bummer"
                    android:layout_below="@id/message_icon"
                    android:textSize="@dimen/text_32"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:textAlignment="center"
                    android:layout_margin="@dimen/margin_4" />
            </RelativeLayout>
        </RelativeLayout>
        <!--FEATURES LAYOUT-->
        <RelativeLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8"
            android:layout_above="@id/bottom_app_bar"
            android:background="#212121"
            android:visibility="visible">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/bottom_features_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_4" />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>