<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/margin_8"
    >

    <LinearLayout
        android:id="@+id/cover_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/padding_8">


            <ImageView
                android:id="@+id/cover2"
                android:layout_width="84dp"
                android:layout_height="96dp"
                android:background="@drawable/collection_left_cut"
                android:layout_gravity="center"
                android:src="@drawable/ic_wallpaper"
                />

        <androidx.cardview.widget.CardView
            android:layout_width="164dp"
            android:layout_height="164dp"
android:transitionName="@string/transistion_blur_image"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"
            android:background="@drawable/collection_middle_item"
            app:cardCornerRadius="@dimen/margin_8">

            <ImageView
                android:id="@+id/cover1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_wallpaper"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:layout_width="84dp"
            android:layout_height="96dp"

            android:background="@drawable/collection_right_cut"
            android:clipToPadding="true"
            app:cardCornerRadius="@dimen/margin_8">

            <ImageView
                android:id="@+id/cover3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_wallpaper"
                android:scaleType="centerCrop"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <View
        android:id="@+id/pichkoo_view"
        android:layout_width="1dp"
        android:layout_height="16dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_8"
        android:alpha="0.5"
        android:background="@color/text_color" />
    <TextView
        android:id="@+id/Collection_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_4"
        android:layout_marginRight="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_4"
        android:text="@string/collection_name"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_18"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Collection_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_4"
        android:textColor="@color/text_color"
        android:text="@string/_504_images"
        android:textAlignment="center"
        android:textSize="@dimen/text_14" />



</LinearLayout>