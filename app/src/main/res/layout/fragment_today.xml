<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:gravity="center">

    <ImageView
        android:id="@+id/blur_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <io.hustler.wallzy.customviews.HorizntalRecyclerView
        android:id="@+id/item_list"
        android:layout_width="match_parent"
        android:layout_height="730dp"
        android:layout_centerInParent="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:overScrollMode="never" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_download_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:layout_toStartOf="@id/medianView"
            android:layout_toLeftOf="@id/medianView"
            android:src="@drawable/ic_cloud_download_black_24dp"
            android:tint="@color/bg" />

        <View
            android:id="@+id/medianView"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/bg" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_set_wallpaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:layout_toEndOf="@id/medianView"
            android:layout_toRightOf="@id/medianView"
            android:src="@drawable/ic_collection_24dp"
            android:tint="@color/bg" />

    </RelativeLayout>


</RelativeLayout>