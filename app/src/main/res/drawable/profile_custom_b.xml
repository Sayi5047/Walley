<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Colored rectangle-->
    <item android:left="7.5dp">
        <rotate android:fromDegrees="9">
            <shape android:shape="rectangle">

                <size
                    android:width="512dp"
                    android:height="50dp" />
                <solid android:color="#ffffff" />

            </shape>
        </rotate>
    </item>


    <item
        android:top="25dp"
        android:bottom="-65dp"
        android:right="10dp">
        <rotate android:fromDegrees="10">
            <shape android:shape="rectangle">
                <solid android:color="#ffffff" />
                <corners android:bottomLeftRadius="@dimen/margin_48" />
            </shape>
        </rotate>
    </item>

</layer-list>